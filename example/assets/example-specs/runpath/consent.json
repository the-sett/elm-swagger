          "text/json"
        ],
        "produces": [
          "application/json",
          "text/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The unique id of the consent to update",
            "required": true,
            "type": "integer",
            "format": "int32"
          },
          {
            "name": "consent",
            "in": "body",
            "description": "The new consent details. These will override the consent details in the store",
