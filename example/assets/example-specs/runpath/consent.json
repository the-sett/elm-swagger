  "definitions": {
    "Consent": {
      "description": "The main consent model",
      "required": [
        "date",
        "mechanism",
        "duration",
        "expirationDate",
        "status",
        "partyId",
        "serviceId"
      ],
      "type": "object",
      "properties": {
        "id": {
          "format": "int32",
          "description": "The Unique identifier for each consent",
          "type": "integer"
        },
        "date": {
          "format": "date-time",
          "description": "Date of Consent",
          "type": "string",
          "example": "2018-10-10T22:11:46.7584939+00:00"
        },
        "mechanism": {
          "description": "Entity where the consent has been granted",
          "enum": [
            "Website",
            "App",
            "Email",
            "Telephone",
            "Letter"
          ],
          "type": "string"
        },
        "duration": {
          "description": "Duration of consent",
          "enum": [
            "Transaction",
            "FixedPeriod"
          ],
          "type": "string"
        },
        "expirationDate": {
          "format": "date-time",
          "description": "Date of consent expiry",
          "type": "string",
          "example": "2018-10-10T22:11:46.7741094+00:00"
        },
        "status": {
          "description": "Status of consent. Active | Revoked | Rejected",
          "enum": [
            "Active",
            "Awaiting",
            "Revoked",
            "Rejected",
            "Expired"
          ],
          "type": "string"
        },
        "partyId": {
          "format": "int32",
          "description": "Party Id",
          "type": "integer"
        },
        "serviceId": {
          "format": "int32",
          "description": "Id of service calling the service",
          "type": "integer"
        },
        "externalId": {
          "description": "Any relevant third party to be stored against the consent",
          "maxLength": 100,
          "minLength": 0,
          "type": "string"
        },
        "participants": {
          "description": "List of participants associated with the consent",
          "type": "array",
          "items": {
            "$ref": "#/definitions/Participants"
          }
        }
      },
      "example": {
        "id": 569552,
        "date": "2018-09-10T22:11:47.2428576+00:00",
        "mechanism": "Website",
        "duration": "Transaction",
        "expirationDate": "2019-01-08T22:11:47.2428576+00:00",
        "status": "Active",
        "partyId": 698566,
        "serviceId": 256985,
        "externalId": "xoRSVjqllKZP",
        "participants": [
          {
            "type": "DataProvider",
            "name": "LoremBank",
            "assetIdentifiers": [
              {
                "name": "AccountId",
                "value": "69854225"
              }
            ]
          }
        ]
      }
    },
    "Participants": {
      "description": "Parties related to a consent",
      "type": "object",
      "properties": {
        "type": {
          "description": "Type of participant. DataController | DataProcessor | DataProvider",
          "enum": [
            "DataController",
            "DataProcessor",
            "DataProvider"
          ],
          "type": "string"
        },
        "name": {
          "description": "Name of participant",
          "maxLength": 50,
          "minLength": 0,
          "type": "string"
        },
        "assetIdentifiers": {
          "description": "List of identifiers for the party",
          "type": "array",
          "items": {
            "$ref": "#/definitions/AssetIdentifiers"
          }
        }
      }
    },
    "AssetIdentifiers": {
      "description": "Asset Identifiers",
      "type": "object",
      "properties": {
        "name": {
          "description": "Name of identifier",
          "maxLength": 50,
          "minLength": 0,
          "type": "string"
        },
        "value": {
          "description": "Value of Identifier",
          "maxLength": 50,
          "minLength": 0,
          "type": "string"
        }
      }
    }
  }
